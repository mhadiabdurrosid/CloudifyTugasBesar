# Basic FrankenPHP configuration for Railway
# Railway handles TLS at the edge, so we serve plain HTTP
:{$PORT:80} {
    # Enable FrankenPHP
    php_server

    # Root directory
    root * /app/public

    # Handle PHP files
    php *.php

    # Basic rewrite for non-files to index.php
    @notFile {
        not file
    }
    rewrite @notFile /index.php
    php @notFile
}
