# Basic FrankenPHP configuration for Railway
{$RAILWAY_STATIC_URL:localhost} {
    # Enable FrankenPHP
    php_server

    # Root directory
    root * /app/public

    # Handle PHP files
    php *.php

    # Basic rewrite for non-files to index.php
    @notFile {
        not file
    }
    rewrite @notFile /index.php
    php @notFile
}
