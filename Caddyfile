{
    # Disable automatic HTTPS
    auto_https off
}

# Main domain - FrankenPHP configuration
{$RAILWAY_STATIC_URL:localhost} {
    # FrankenPHP configuration
    frankenphp

    # Root directory
    root * /app/public

    # Handle PHP files directly
    @phpFiles {
        path *.php
    }

    # Handle PHP files with FrankenPHP
    php @phpFiles

    # URL rewriting for non-file requests (equivalent to .htaccess)
    @notFile {
        not file
        not path /admin/*
    }

    rewrite @notFile /index.php

    # Handle rewritten requests as PHP
    php @notFile

    # Security headers
    header {
        -Server
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
    }

    # Handle static files
    @static {
        file
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2
    }

    # Cache static files
    header @static Cache-Control "public, max-age=31536000"

    # Log requests
    log {
        output stdout
        format console
    }
}
